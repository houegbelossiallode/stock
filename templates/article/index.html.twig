{% extends 'template.html.twig' %}

{% block title %}Articles{% endblock %}
{% block pagetitle %}Listes des Articles{% endblock %}
{% block body %}


<!-- [ Layout content ] Start -->
<div class="layout-content">

<!-- [ content ] Start -->
<div class="container-fluid flex-grow-1 container-p-y">
   
    <div class="card">
        <div class="card-body">
    <td><a href="{{ path('add_article')}}" class="btn btn-sm btn-outline-success mb-2" >Ajouter nouvelle article</a></td>
            <div class="table-responsive">
                <table class="table table-bordered table-striped sortable">
                
                    <thead>
                    
                        <tr>
                            <th style="width: 20%; vertical-align: middle;" rowspan="2" class="az" data-defaultsign="nospan" data-defaultsort="asc">
                                <i class="ion ion-ios-navigate"></i>&nbsp; Nom</th>
                            
                        </tr>
                        <tr>
                            <th style="width: 20%"  >Image</th>
                            <th style="width: 20%">Code</th>
                            <th style="width: 20%">Prix</th>
                            <th style="width: 20%">Quantité</th>
                            <th style="width: 20%">Date Ajout</th>
                            <th style="width: 20%">Ajouter</th>
                            <th style="width: 20%">UPDATE</th>
                            <th style="width: 20%">DELETE</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for article in articles %}
                        <tr>
                            <td>{{article.nom}} </td>
                            <td><img src="{{asset('uploads/article/'~ article.image)}}" alt="" width="60%"></td>
                            <td>{{article.code}} </td>
                            <td>{{article.prix}} </td>
                            <td>{{article.quantite}} </td>
                            <td>{{article.createdAt ? article.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                           <td>
                            <form action="{{ path('add_quantite', {id : article.id})}}" method="POST">
                            
                            <div>
                                <input type="text" name="rejet" id="rejetmot" class="form-control" placeholder="Ajout quantité">
                                
                            </div>
                            <button type="submit" class="btn btn-sm btn-outline-primary">Ajouter</button>
                        </form>
                           </td>
                           <td><a href="{{ path('article_edit', {id : article.id} )}}" class="btn btn-sm btn-outline-success" >Modifier</a></td>
                           <td><a href="{{ path('article_delete', {id : article.id} )}}" class="btn btn-sm btn-outline-danger" onclick="return confirm('Etes-vous sûr de vouloir supprimer : '+ {{article.id}})">Supprimer</a></td>
                        </tr>
                        
                    
 
                        
    

                        
                         
                        
                        
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>


</div>
<!-- [ content ] End -->





{% endblock %}
